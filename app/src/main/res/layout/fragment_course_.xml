<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="178dp"
        android:layout_height="186dp"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtCourses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selector Cursos"
            android:textColor="@android:color/holo_blue_dark" />

        <Spinner
            android:id="@+id/spinnerCourses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/addCourse"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="AÃ±adir Curso"
            android:textSize="8dp" />

        <TextView
            android:id="@+id/txtStarted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cursos Comenzados"
            android:textColor="@android:color/holo_blue_dark" />

        <Spinner
            android:id="@+id/spinnerStarted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/buttonCategories"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Ir Categorias"
            android:textSize="8dp"/>


    </LinearLayout>

</LinearLayout>